<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black_dd"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/centerCircle"
            android:layout_marginTop="80dp">

            <com.zjk.wifiproject.view.CircularProgress
                android:id="@+id/circleProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.zjk.wifiproject.view.CircularProgress>

            <TextView
                android:gravity="center"
                android:id="@+id/status"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Creating hotspot..."
                android:layout_marginTop="50dp"
                android:lineSpacingMultiplier="1.5"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/centerSearch"
            android:layout_marginTop="80dp">

            <com.zjk.wifiproject.view.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.zjk.wifiproject.view.SearchView>

        </RelativeLayout>
